# ===============================================
# POKEMON ORDER PLANNING - CONFIGURATION
# ===============================================

# =============================================================================
# ORDER PROCESSING DATES
# =============================================================================

# Start date for orders to process (format: YYYY-MM-DD)
# Example: Process orders registered since June 1st, 2025
VITE_ORDER_START_DATE=2025-06-01

# Processing start date (format: YYYY-MM-DD)
# Example: Start processing today
VITE_PLANNING_START_DATE=2025-06-01

# Processing end date (format: YYYY-MM-DD)
# Default: 7 days after start date
VITE_PLANNING_END_DATE=2025-12-31


# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Backend API base URL
VITE_API_BASE_URL=http://localhost:8080

# Default number of employees for planning
VITE_DEFAULT_EMPLOYEES=4

# Processing time per card (in minutes)
VITE_DEFAULT_TIME_PER_CARD=3

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application name
VITE_APP_TITLE=Pokemon Order Planning System

# Application version
VITE_APP_VERSION=1.0.0

# Debug mode (true/false)
VITE_DEBUG_MODE=true

# Default pagination size
VITE_DEFAULT_PAGE_SIZE=20

# =============================================================================
# PRIORITY CONFIGURATION
# =============================================================================

# Priority mapping (priority codes to names)
VITE_PRIORITY_URGENT=X,F+
VITE_PRIORITY_HIGH=F,HAUTE
VITE_PRIORITY_MEDIUM=NORMALE,MEDIUM
VITE_PRIORITY_LOW=C,BASSE

# =============================================================================
# INTERFACE MESSAGES
# =============================================================================

# Default language
VITE_DEFAULT_LOCALE=en

# Interface messages
VITE_LOADING_MESSAGE=Loading Pokemon card orders...
VITE_ERROR_MESSAGE=Unable to connect to backend service
VITE_SUCCESS_MESSAGE=Orders loaded successfully

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable detailed logging
VITE_VERBOSE_LOGGING=true

# Enable test data
VITE_ENABLE_MOCK_DATA=false

# API call simulation delay (in ms)
VITE_API_DELAY=0